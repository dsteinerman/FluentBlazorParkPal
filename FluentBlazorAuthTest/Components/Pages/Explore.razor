@page "/Explore"
@inject IJSRuntime JSRuntime

<PageTitle>Explore</PageTitle>

<!-- using the iframe to embed and redirect to another page (where the functionality works better in js/API) -->
<iframe src="/HTML/Explore.html" style="position: absolute; top: 0; left: 0; width: 100%; height: 100%; border: none;"></iframe>


<style>
    .post-listing-btn {
        width: 50px;
        height: 50px;
        border: none;
        border-radius: 50%;
        background-color: #5b72ff;
        color: #fff;
        font-size: 24px;
        cursor: pointer;
        box-shadow: 0px 2px 4px rgba(0, 0, 0, 0.1);
        transition: all 0.3s ease;
        position: fixed;
        bottom: 160px; 
        right: 20px;
    }

        .post-listing-btn:hover {
            background-color: #4255cc;
        }
</style>
<div id="buttonContainer" style="position: absolute; bottom: 20px; right: 20px;">
    <button class="post-listing-btn">+</button>
</div>

<!-- + button on the explore page, when clicked will redirect users to create listing page -->

<script>
    document.addEventListener('DOMContentLoaded', function () {
        var button = document.querySelector('.post-listing-btn');
        button.addEventListener('click', function () {
            window.location.href = 'https://localhost:7275/spaces/create';
        });
    });
</script>





