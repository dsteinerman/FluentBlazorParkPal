@page "/Book"
@using System.Collections.Generic

<link rel="stylesheet" href="/HTML/CSS/Styles.css" />

<!-- The main section for displaying bookings -->

<main class="bookings-page-content">
    <section class="booking-management">
        <div class="bookings-list">
            @foreach (var booking in Bookings)
            {
                <div class="booking-item">
                    <h3 class="booking-title">@booking.Title</h3>
                    <p class="booking-details">Location: @booking.Location</p>
                    <p class="booking-details">Car Type: @booking.CarType</p>
                    <p class="booking-details">Dates: @booking.Dates</p>
                    <p class="booking-details">Status: @booking.Status</p>
                  
                    <p class="booking-details">Total Price: @booking.Price</p>
                    <div class="booking-actions">
                        <button class="modify-btn">Modify</button>
                        <button class="cancel-btn">Cancel</button>
                    </div>
                </div>
            }
        </div>
    </section>
</main>

@code {

    // Class defining the structure of a booking
  
    public class BookingModel
    {
        public string Title { get; set; }
        public string Location { get; set; }
        public string CarType { get; set; }
        public string Dates { get; set; }
        public string Status { get; set; }
        public int PassengerCount { get; set; }
        public decimal Price { get; set; }
    }

    // List of sample bookings

    List<BookingModel> Bookings = new List<BookingModel>
    {
        new BookingModel
        {
            Title = "Booking 1",
            Location = "City 1",
            CarType = "SUV",
            Dates = "Feb 23 - Feb 28",
            Status = "Confirmed",
          
            Price = 500
        },
        new BookingModel
        {
            Title = "Booking 2",
            Location = "City 2",
            CarType = "Sedan",
            Dates = "Mar 10 - Mar 15",
            Status = "Confirmed",
           
            Price = 300
        }
    };
}

