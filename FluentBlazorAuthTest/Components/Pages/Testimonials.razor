@page "/testimonials"

<h1>Testimonials</h1>

<style>
    
    .testimonial-card {
        border: 1px solid #ccc;
        padding: 20px;
        margin-bottom: 20px;
        border-radius: 8px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

    .testimonial-content {
        font-size: 16px;
        line-height: 1.5;
    }

        .testimonial-content p {
            margin-bottom: 10px;
        }

        .testimonial-content strong {
            font-weight: bold;
        }

        .testimonial-content em {
            font-style: italic;
        }
</style>

@foreach (var testimonial in TestimonialsList)
{
    <div class="testimonial-card">
        <div class="testimonial-content">
            <p>@testimonial.Content</p>
            <p><strong>- @testimonial.Name</strong></p>
            <p><em>@testimonial.Location</em></p>
        </div>
    </div>
}

