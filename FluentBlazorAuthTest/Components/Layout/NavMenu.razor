@* To get access to all Fluent UI System icons, install the Microsoft.FluentUI.AspNetCore.Compoents.Icon package *@
@* See all the diffeent ways on how to use icons at https://www.fluentui-blazor.net/Icon *@
@rendermode InteractiveServer

@implements IDisposable

@inject NavigationManager NavigationManager

<nav>
    <FluentNavMenu Width="250" Collapsible="true" Title="Custom navigation menu">
        <FluentNavLink Href="/Home" Match="NavLinkMatch.All" Icon="@Icon.FromImageUrl("/images/home.svg")" IconColor="Color.Accent">Home</FluentNavLink>
        <FluentNavLink Href="auth" Icon="@Icon.FromImageUrl("/images/authrequired.svg")" IconColor="Color.Accent">Auth Required</FluentNavLink>
        



        <AuthorizeView>
            <Authorized>
                <FluentNavLink Href="Account/Manage">@context.User.Identity?.Name</FluentNavLink>
                <form action="Account/Logout" method="post">
                    <AntiforgeryToken />
                    <input type="hidden" name="ReturnUrl" value="@currentUrl" />
                    <FluentButton Type="ButtonType.Submit" Style="width: 100%;">Logout</FluentButton>
                </form>
            </Authorized>
            <NotAuthorized>
                    <FluentNavLink Href="/">Register</FluentNavLink>
                    <FluentNavLink Href="Account/Login">Login</FluentNavLink>
            </NotAuthorized>

        </AuthorizeView>
            <FluentNavLink Href="/spaces/create" Match="NavLinkMatch.All" Icon="@(new Icons.Regular.Size24.AddCircle())" IconColor="Color.Accent">Create Listing</FluentNavLink>

            <FluentNavLink Href="/Support" Match="NavLinkMatch.All" Icon="@(new Icons.Regular.Size24.PersonPhone())" IconColor="Color.Accent">Support</FluentNavLink>

            <FluentNavLink Href="/Messages" Match="NavLinkMatch.All" Icon="@(new Icons.Regular.Size24.Chat())" IconColor="Color.Accent">Messages</FluentNavLink>


            <FluentNavLink Href="/Explore" Match="NavLinkMatch.All" Icon="@(new Icons.Regular.Size24.VehicleCar())" IconColor="Color.Accent">Explore</FluentNavLink>

            <FluentNavLink Href="/Book" Match="NavLinkMatch.All" Icon="@(new Icons.Regular.Size24.BookmarkMultiple())" IconColor="Color.Accent">Your Bookings</FluentNavLink>

            <FluentNavLink Href="/Testimonials" Match="NavLinkMatch.All" Icon="@(new Icons.Regular.Size20.ChatMultipleHeart())" IconColor="Color.Accent">Testimonials</FluentNavLink>


            <FluentNavLink Href="/Profile" Match="NavLinkMatch.All" Icon="@(new Icons.Regular.Size20.PersonAvailable())" IconColor="Color.Accent">Profile</FluentNavLink>

            <FluentNavLink Href="/Settings" Match="NavLinkMatch.All" Icon="@(new Icons.Regular.Size24.ArchiveSettings())" IconColor="Color.Accent">Settings</FluentNavLink>
        </FluentNavMenu>
</nav>


@code {
    private string? currentUrl;

    protected override void OnInitialized()
    {
        currentUrl = NavigationManager.ToBaseRelativePath(NavigationManager.Uri);
        NavigationManager.LocationChanged += OnLocationChanged;
    }

    private void OnLocationChanged(object? sender, LocationChangedEventArgs e)
    {
        currentUrl = NavigationManager.ToBaseRelativePath(e.Location);
        StateHasChanged();
    }

    public void Dispose()
    {
        NavigationManager.LocationChanged -= OnLocationChanged;
    }
}

